---
import { Image } from "astro:assets";
import logoCda from "../assets/logo-cda.webp";
---

<style>
  body {
    background: #fff;
    font-family: "Open Sans", "Segoe UI", Arial, sans-serif;
  }
  .header-container {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 1200px;
    margin: 0 auto;
    flex-wrap: wrap;
    padding: 0 0.5rem;
  }
  .header-logo {
    flex: 1 1 100px;
    text-align: left;
    padding-left: 0.5rem;
    min-width: 120px;
  }
  .header-logo img {
    display: none;
  }
  .header-nav {
    flex: 2 1 300px;
    display: flex;
    justify-content: center;
    min-width: 220px;
    margin: 0.5rem 0;
  }
  .header-nav nav {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .header-nav nav a {
    font-weight: bold;
    font-size: 1.05rem;
    transition: color 0.2s;
  }
  .header-nav nav a:active,
  .header-nav nav a:focus {
    color: #fecd08 !important;
  }
  .header-nav nav a.active {
    color: #fecc06 !important;
  }
  .header-btn {
    flex: 1 1 120px;
    text-align: right;
    padding-right: 0.25rem;
    min-width: 120px;
    margin-top: 0;
  }
  .header-btn a {
    font-size: 1.1rem;
    background: #51c51b;
    color: #fff !important;
    border-radius: 5px;
    font-weight: bold;
    text-decoration: none;
    transition: background 0.2s;
    display: inline-block;
    padding: 0.8rem 2.2rem;
  }
  .menu-icon {
    display: none;
    font-size: 2rem;
    color: #000;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0 1rem;
  }
  @media (max-width: 800px) {
    .header-container {
      flex-direction: row;
      align-items: center;
      padding: 0 0.5rem;
    }
    .header-logo {
      flex: 1;
      text-align: left;
      padding: 0;
      margin-bottom: 0;
    }
    .header-btn {
      display: none;
    }
    .header-nav {
      display: none;
      position: absolute;
      top: 70px;
      right: 10px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      padding: 1rem 2rem;
      z-index: 1000;
    }
    .header-nav nav {
      flex-direction: column;
      gap: 1rem;
    }
    .menu-toggle:checked ~ .header-nav {
      display: block;
    }
    .menu-icon {
      display: inline-block;
    }
  }
</style>
<link
  href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap"
  rel="stylesheet"
/>

<header
  style="background:#fff; color:#000; padding:0.7rem 0; position:relative;"
>
  <div class="header-container">
    <div class="header-logo">
      <a href="/">
        <Image
          src={logoCda}
          alt="Logo de la empresa"
          height={80}
          style="max-width:100%; height:auto; display:block; image-rendering: pixelated;"
          quality={100}
          fit="contain"
          format="webp"
          loading="lazy"
        />
      </a>
    </div>
    <!-- Menú hamburguesa solo visible en móvil -->
    <input
      type="checkbox"
      id="menu-toggle"
      class="menu-toggle"
      style="display:none;"
    />
    <label
      for="menu-toggle"
      class="menu-icon"
      aria-label="Abrir menú de navegación"
    >
      &#9776;
    </label>
    <div class="header-nav">
      <nav>
        <a
          href="/"
          class={Astro.url.pathname === "/" ? "active" : ""}
          style="color:#000; text-decoration:none;">INICIO</a
        >
        <a
          href="/servicios"
          class={Astro.url.pathname === "/servicios" ? "active" : ""}
          style="color:#000; text-decoration:none;">SERVICIOS</a
        >
        <a
          href="/sedes"
          class={Astro.url.pathname === "/sedes" ? "active" : ""}
          style="color:#000; text-decoration:none;">SEDES</a
        >
        <a
          href="/blog"
          class={Astro.url.pathname === "/blog" ? "active" : ""}
          style="color:#000; text-decoration:none;">BLOG</a
        >
        <a
          href="/contacto"
          class={Astro.url.pathname === "/contacto" ? "active" : ""}
          style="color:#000; text-decoration:none;">CONTACTO</a
        >
      </nav>
    </div>
    <div class="header-btn">
      <a
        href="https://wa.me/3144834232"
        target="_blank"
        rel="noopener noreferrer">¡Contáctanos!</a
      >
    </div>
  </div>
</header>
