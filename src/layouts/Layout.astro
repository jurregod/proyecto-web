---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import imgRTM from "../assets/img-rtm.webp";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  showWhatsApp?: boolean;
  canonical?: string; //  Nueva prop para URL can贸nica personalizada
}

const {
  title = "Revisi贸n tecnomec谩nica en Bogot谩 | CDA Tu Revisi贸n",
  description = "CDA Tu Revisi贸n Suba Tabor | CDA Tu Revisi贸n Corabastos | Revisi贸n T茅cnico Mec谩nica para Motocicletas 2T y 4T | Suba | Kennedy | Bogot谩",
  image = imgRTM.src,
  showWhatsApp = true,
  canonical, //  Nueva prop para URL can贸nica
} = Astro.props;

// Determinar URL can贸nica
const canonicalURL = canonical || Astro.url;

// Verificar si estamos en una p谩gina de blog
const currentPath = Astro.url.pathname;
const isBlogPage = currentPath === "/blog" || currentPath.startsWith("/blog/");
const shouldShowWhatsApp = showWhatsApp && !isBlogPage;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Slot para metadatos adicionales espec铆ficos de cada p谩gina -->
    <slot name="head" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    {shouldShowWhatsApp && <WhatsAppButton />}
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: #fff;
    font-family: "Open Sans", "Segoe UI", Arial, sans-serif;
  }
</style>
