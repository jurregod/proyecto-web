          border: 1px solid #ddd;
          border-top: none;
        }

        @media (max-width: 600px) {
          .tarifas-table {
            display: none;
          }
          .tarifas-mobile {
            display: flex;
          }
          .tarifa-card {
            display: block;
          }
        }

        @media (max-width: 480px) {
          .tarifas-th {
            padding: 0.8rem 0.4rem;
            font-size: 0.85rem;
          }
          .tarifas-td {
            padding: 1rem 0.5rem;
            font-size: 1rem;
          }
          .tarifa-card {
            width: calc(50% - 0.5rem);
            min-width: 120px;
          }
          .tarifa-card-header {
            font-size: 0.8rem;
            padding: 0.7rem 0.4rem;
            min-height: 40px;
          }
          .tarifa-card-body {
            font-size: 1rem;
            padding: 0.8rem 0.3rem;
          }
        }

        @media (max-width: 350px) {
          .tarifa-card {
            width: calc(50% - 0.3rem);
            min-width: 110px;
          }
          .tarifa-card-header {
            font-size: 0.75rem;
            padding: 0.6rem 0.3rem;
          }
          .tarifa-card-body {
            font-size: 0.9rem;
            padding: 0.7rem 0.3rem;
          }
          .tarifas-mobile {
            gap: 0.6rem;
          }
        }
      </style>

      <div class="tarifas-container">
        <!-- Tabla para escritorio -->
        <table class="tarifas-table">
          <thead>
            <tr class="tarifas-header">
              <th class="tarifas-th">Modelos ➜2025 a 2023</th>
              <th class="tarifas-th">Modelos ➜2022 a 2018</th>
              <th class="tarifas-th">Modelos ➜2017 a 2009</th>
              <th class="tarifas-th">Modelos ➜2008 > Atrás</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="tarifas-td">$209.000</td>
              <td class="tarifas-td">$209.300</td>
              <td class="tarifas-td">$209.600</td>
              <td class="tarifas-td">$209.300</td>
            </tr>
          </tbody>
