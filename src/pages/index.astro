---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import portadaIndex from "../assets/portada-index.webp";
import imgRTM from "../assets/img-rtm.webp";
import imgCertificado from "../assets/img-certificado.webp";

// Metadatos específicos para la página de inicio
const pageTitle = "Revisión tecnomecánica en Bogotá | CDA Tu Revisión";
const pageDescription =
  "CDA Tu Revisión Suba Tabor | CDA Tu Revisión Corabastos | Revisión Técnico Mecánica para Motocicletas 2T y 4T | Suba | Kennedy | Bogotá";
const pageImage = portadaIndex.src;

// Datos estructurados para SEO (schema.org)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "CDA Tu Revisión",
  description:
    "Centro de Diagnóstico Automotor autorizado para revisión técnico mecánica de motos en Bogotá",
  url: Astro.url.toString(),
  logo: new URL("/favicon.webp", Astro.url).toString(),
  image: new URL(pageImage, Astro.url).toString(),
  priceRange: "$209.000 - $209.600",
  currenciesAccepted: "COP",
  paymentAccepted: "Efectivo, tarjeta de crédito, tarjeta débito",
  location: [
    {
      "@type": "AutoRepair",
      name: "CDA Tu Revisión Suba Tabor",
      description:
        "Centro de Diagnóstico Automotor para motos en el norte de Bogotá",
      url: new URL("/sedes#suba", Astro.url).toString(),
      telephone: "+573205680589",
      openingHours: "Mo-Sa 07:00-19:00, Su,PH 09:00-14:00",
      address: {
        "@type": "PostalAddress",
        streetAddress: "Av. Calle 132 #98C-33",
        addressLocality: "Bogotá",
        addressRegion: "DC",
        postalCode: "",
        addressCountry: "CO",
      },
      geo: {
        "@type": "GeoCoordinates",
        latitude: "4.734058",
        longitude: "-74.096940",
      },
      hasMap: "https://maps.google.com/?q=CDA+Tu+Revisión+Suba+Tabor",
    },
    {
      "@type": "AutoRepair",
      name: "CDA Tu Revisión Corabastos",
      description:
        "Centro de Diagnóstico Automotor para motos en el sur de Bogotá",
      url: new URL("/sedes#kennedy", Astro.url).toString(),
      telephone: "+573144692424",
      openingHours: "Mo-Sa 07:00-19:00, Su,PH 09:00-14:00",
      address: {
        "@type": "PostalAddress",
        streetAddress: "Av. Cra 80 #41B-28 Sur",
        addressLocality: "Bogotá",
        addressRegion: "DC",
        postalCode: "",
        addressCountry: "CO",
      },
      geo: {
        "@type": "GeoCoordinates",
        latitude: "4.623191",
        longitude: "-74.164422",
      },
      hasMap: "https://maps.google.com/?q=CDA+Tu+Revisión+Corabastos",
    },
  ],
};

// Keywords para SEO
const keywords =
  "revisión técnico mecánica, motos, CDA, Bogotá, Kennedy, Suba, certificado RTM, diagnóstico automotor";
---

<Layout title={pageTitle} description={pageDescription} image={pageImage}>
  <!-- Schema.org JSON-LD para SEO -->
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify(schemaData)}
  />

  <!-- Metadatos adicionales para SEO -->
  <meta name="keywords" content={keywords} slot="head" />
  <meta name="robots" content="index, follow" slot="head" />
  <meta name="author" content="CDA Tu Revisión" slot="head" />
  <meta name="geo.placename" content="Bogotá, Colombia" slot="head" />
  <meta name="geo.region" content="CO-DC" slot="head" />
  <meta
    name="geo.position"
    content="4.734058;-74.096940,4.623191;-74.164422"
    slot="head"
  />
  <main
    style="min-height:60vh; text-align:center; position:relative; width:100%; overflow-x:hidden; margin:0 auto; padding:0; box-sizing:border-box;"
  >
    <!-- 1. PORTADA PRINCIPAL -->
    <section
      style="position:relative; width:100vw; margin-left:calc(-50vw + 50%); margin-right:calc(-50vw + 50%); overflow:hidden; height:auto; min-height:400px; max-height:580px; box-sizing:border-box;"
    >
      <Image
        src={portadaIndex}
        alt="Portada CDA"
        style="width:100%; height:auto; min-height:400px; max-height:540px; object-fit:cover; border-top:8px solid #fecc06; border-bottom:8px solid #fecc06; border-left:none; border-right:none; border-radius:0; display:block; margin:0 auto;"
        width={1920}
        height={540}
        format="webp"
        quality={90}
        loading="eager"
      />
      <div
        style="position:absolute; top:0; left:0; width:100%; height:100%; display:flex; flex-direction:column; align-items:center; justify-content:center; color:#fff; padding:2rem 1rem; text-align:center; box-sizing:border-box;"
      >
        <h1
          style="margin:0; font-size:clamp(2.5rem, 10vw, 4.5rem); text-shadow:0 2px 8px #000; color:#51c51b; line-height:1.2; width:100%;"
        >
          CDA TU REVISION
        </h1>
        <h2
          style="margin:0.5em 0 1.2rem; font-size:clamp(1.5rem, 5vw, 2.1rem); text-shadow:0 2px 8px #000; line-height:1.3; max-width:95%; width:100%;"
        >
          Revisión técnico mecánica para motos
        </h2>
        <a
          href="https://wa.me/3144834232"
          style="display:inline-block; background:#51c51b; color:#fff; padding:0.75rem 2rem; border-radius:6px; text-decoration:none; font-weight:bold; font-size:1.1rem; box-shadow:0 2px 8px rgba(0, 0, 0, 0.2); margin-top:1rem; transition: transform 0.2s ease, background-color 0.2s ease;"
          >Contáctanos</a
        >
      </div>
    </section>
    <!-- 2. ESPACIADOR INFERIOR PORTADA -->
    <div style="height:20px;"></div>
    <!-- 3. SECCIÓN SERVICIOS -->
    <section
      style="position:relative; width:100vw; margin-left:calc(-50vw + 50%); margin-right:calc(-50vw + 50%); background:#51c51b; padding:3rem 1rem; display:flex; flex-direction:column; justify-content:center; align-items:center; box-shadow:0 2px 12px rgba(0,0,0,0.15); flex-wrap:wrap; box-sizing:border-box;"
    >
      <div
        style="display:flex; flex-direction:row; justify-content:center; align-items:center; gap:2rem; width:100%; max-width:1200px; flex-wrap:wrap; padding:0; box-sizing:border-box;"
      >
        <div
          style={`background-image: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.45)), url('${imgRTM.src}'); background-position: center; background-size: cover; background-repeat: no-repeat; background-color: #fff; border-radius:16px; box-shadow:0 6px 24px #0006; width:100%; max-width:540px; height:320px; display:flex; flex-direction:column; justify-content:center; align-items:center; position:relative; overflow:hidden; margin:0 auto;`}
        >
          <h3
            style="color:#fff; font-size:clamp(1.8rem, 7vw, 2.4rem); margin-bottom:0.7rem; padding:0.2em 0.8em; border-radius:8px; text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5); text-align:center;"
          >
            Revisión Técnico Mecánica
          </h3>
          <a
            href="/servicios"
            style="display:inline-block; background:#51c51b; color:#fff; padding:0.7rem 2rem; border-radius:6px; text-decoration:none; font-weight:bold; font-size:1.1rem; margin-top:0.7rem; box-shadow:0 2px 8px #0002; margin-bottom:1.2rem; align-self:center; max-width:90%; word-break:break-word;"
